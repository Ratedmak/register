<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/styles/main.css" rel="stylesheet">
</head>
<body>
    
        <% if(locals.username){ %>
            <h1> Welcome <%= username %></h1>
       <% } %>
       <div class="homecontain">

       <form  action="/updation" method="post">
        <div class="forms">


        <label for="email">Email</label>
        <% if(locals.email){ %>
        <input type="email" value=<%= email %> id="email" readonly>
         <%  } %>
        <%if(locals.age){%>
        <label for="age">Age</label>
        <input type="number" id="age" name="age" value=<%= age %> required>
       <% }else{ %>
        <label for="age">Age</label>
        <input type="number" id="age" name="age" required>
        <%  } %>
        
        <% if(locals.gender){ %>
        <label for="gender">Gender<label>
        <select id="gender" name="gender" type="text" required>
            <option ><%= gender  %></option>
            <option value="None">None</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
      <% }else{ %>
        <label for="gender">Gender<label>
        <select id="gender" name="gender" type="text" required>
                <option value="None" >None</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
        </select>
         <%  } %>
        <% if(locals.phone_number){ %>
            <label for="phone_number">Phone Number</label>
        <input id="phone_number" type="number" name="phone_number" value= <%= phone_number %> required>
       <% }else{ %>
        <label for="phone_number">Phone Number</label>
        <input id="phone_number" type="number" name="phone_number" required>
        <% } %>
        <% if(locals.dob){ %>

            <label for="dob">Date Of Birth</label>
        <input type="dob" id="dob" name="dob" value=<%= dob %> required readonly>
       <% } else{%>
        <label for="dob">Date Of Birth</label>
        <input type="date" id="dob" name="dob" required>
         <% }%> 
        </div>
       <button type="submit" class="finalbtn" >Submit</button>
    
       </form>

   <a href="/login"  class="logout">Sign Out</a>
</div>

   <script>  window.history.forward();
    function noBack() { window.history.forward(); }</script>
</body>
</html>